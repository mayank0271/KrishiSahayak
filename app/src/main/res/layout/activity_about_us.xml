<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aloofwillow96.languageapp.ImportantLinks">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/backgroundcolor"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="260dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"

                    >


                    <RelativeLayout
                        android:id="@+id/krishijagattu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/weblink4"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="220dp"
                            android:padding="10dp"
                            android:src="@drawable/mayank" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="22dp"
                            android:text="MAYANK AGRAWAL   \nBE 6th SEMESTER \nDEPARTMENT OF CSE"
                            android:textColor="@android:color/darker_gray" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="390dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"

                    >


                    <RelativeLayout
                        android:id="@+id/krishimobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/weblink5"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="220dp"
                            android:padding="10dp"
                            android:src="@drawable/ashank" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="22dp"
                            android:text="ASHANK BHARATI    \nBE 6th SEMESTER \nDEPARTMENT OF CSE"
                            android:textColor="@android:color/darker_gray" />



                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">


                <android.support.v7.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"

                    >


                    <RelativeLayout
                        android:id="@+id/krishikannada"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">




                        <ImageView
                            android:id="@+id/weblink2"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="220dp"
                            android:padding="10dp"
                            android:src="@drawable/bhaskar" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="G BHASKAR     \nASSISTANT PROFESSOR \nDEPARTMENT OF CSE"
                            android:layout_marginEnd="21dp"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/darker_gray"
                            android:layout_alignParentEnd="true" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="130dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"

                    >


                    <RelativeLayout
                        android:id="@+id/krishidarshan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/weblink3"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="220dp"
                            android:padding="10dp"
                            android:src="@drawable/gaurav" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="22dp"
                            android:text="GAURAV KUMAR  \nBE 6th SEMESTER \nDEPARTMENT OF CSE"
                            android:textColor="@android:color/darker_gray" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>







            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="520dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"

                    >


                    <RelativeLayout
                        android:id="@+id/develop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="200dp"
                            android:textSize="15dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="22dp"
                            android:text="DEVELOPMENT TEAM OF SIT"
                            android:textColor="@android:color/darker_gray" />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
